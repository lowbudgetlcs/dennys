selectGameByShortcode:
    SELECT *
    FROM games
    WHERE shortcode = ?;

updateWinnerLoserCallback:
  UPDATE games
  SET winner_id = :winner, loser_id = :loser, callback_result = :result
  WHERE id = :id
  RETURNING id;

countWinsBySeries:
    SELECT COUNT(id)
    FROM games
    WHERE series_id = ? AND winner_id = ?;
